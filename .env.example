# MongoDB (use mongodb+srv:// for MongoDB Atlas on Render)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=cp_assistant

# Optional: default handles (users normally set their own in the dashboard; these are fallback only)
# CODEFORCES_HANDLE=
# LEETCODE_USERNAME=

# Timezone for notifications and dashboard (e.g. Asia/Dhaka)
USER_TIMEZONE=UTC

# SMTP for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com

# Codeforces / LeetCode login (for auto-registration; keep secret)
CODEFORCES_PASSWORD=
LEETCODE_PASSWORD=

# Registration: false = visible browser (local dev). true = headless (required on Render).
# REGISTER_HEADLESS=false

# OpenAI for LangChain agent (optional; can use other LLM)
OPENAI_API_KEY=

# Mistral API key for the chatbot (get one at https://console.mistral.ai/)
MISTRAL_API_KEY=

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Set to true to disable the background scheduler (contest monitor, practice sync, post-contest)
# DISABLE_SCHEDULER=false

# Windows only: use D: or E: for caches and Playwright (ignored on Linux/Render)
# CACHE_DRIVE=D
# PLAYWRIGHT_BROWSERS_PATH=D:\cp-assistant-cache\playwright-browsers
